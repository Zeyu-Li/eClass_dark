{
    "name": "eClass Optimizations",
    "author": "Andrew Li",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Makes eClass more useable",
    "icons": {"128": "images/favicon.png"},
    "permissions": ["activeTab"],
    "browser_action": {
        "default_icon": "images/favicon.png",
        "default_title": "eClass Optimizations"
    },
    "content_scripts": [ 
        {
            "matches": [
                "*://eclass.srv.ualberta.ca/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]

}